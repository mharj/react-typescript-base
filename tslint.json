{
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts",
			"coverage/lcov-report/*.js"
		],
		"include": [
			"test/*.ts"
		]
	},
	"rules": {
		"no-console": false,
		"jsx-no-lambda": false,
		"jsx-wrap-multiline": true,
		"jsx-no-string-ref": true,
		"jsx-space-before-trailing-slash": true
	}
}