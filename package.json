{
    "name": "react-typescript-base",
    "version": "1.0.0",
    "description": "Basic Typescript React base project (I18N, Helmet, HashRouter, redux, persist, loadable)",
    "private": true,
    "homepage": ".",
    "scripts": {
        "build-css": "sass src:src",
        "watch-css": "sass --watch src:src",
        "start-js": "react-scripts --inspect start",
        "build-js": "react-scripts build",
        "lint": "eslint \"src/**/*.ts?(x)\"",
        "start": "npm-run-all -p watch-css start-js",
        "build": "npm-run-all build-css build-js",
        "test": "cross-env TS_NODE_PROJECT=tsconfig.test.json TS_NODE_FILES=true nyc mocha",
        "eject": "react-scripts eject"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mharj/react-typescript-base.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/mharj/react-typescript-base/issues"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "reporter": [
            "text"
        ],
        "all": true
    },
    "mocha": {
        "recursive": true,
        "exit": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "extension": [
            "ts",
            "js"
        ],
        "reporters": [
            "spec"
        ]
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/chai-as-promised": "^7.1.4",
        "@types/chai-subset": "^1.3.3",
        "@types/jest": "^26.0.24",
        "@types/mocha": "^9.0.0",
        "@types/node": "^12.20.41",
        "@types/react": "^16.14.21",
        "@types/react-dom": "^16.9.14",
        "@types/react-helmet": "^6.1.5",
        "@typescript-eslint/eslint-plugin": "^5.9.0",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "chai-subset": "^1.6.0",
        "cross-env": "^7.0.3",
        "cross-fetch": "^3.1.4",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-sonarjs": "^0.11.0",
        "i18next": "^21.6.5",
        "i18next-browser-languagedetector": "^6.1.2",
        "mharj-http-client": "^0.0.8",
        "mocha": "^9.1.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-i18next": "^11.15.3",
        "react-redux": "^7.2.6",
        "react-router": "^6.2.1",
        "react-router-dom": "^6.2.1",
        "react-scripts": "5.0.0",
        "redux": "^4.1.2",
        "redux-persist": "^6.0.0",
        "redux-thunk": "^2.4.1",
        "sass": "^1.47.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4",
        "web-vitals": "^0.2.4",
        "workbox-background-sync": "^5.1.4",
        "workbox-broadcast-update": "^5.1.4",
        "workbox-cacheable-response": "^5.1.4",
        "workbox-core": "^5.1.4",
        "workbox-expiration": "^5.1.4",
        "workbox-google-analytics": "^5.1.4",
        "workbox-navigation-preload": "^5.1.4",
        "workbox-precaching": "^5.1.4",
        "workbox-range-requests": "^5.1.4",
        "workbox-routing": "^5.1.4",
        "workbox-strategies": "^5.1.4",
        "workbox-streams": "^5.1.4"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}