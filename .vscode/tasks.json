{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "development",
            "type": "npm",
            "script": "start",
            "problemMatcher": [
                "$node-sass",
                "$tsc-watch"
            ]
        }
    ]
}